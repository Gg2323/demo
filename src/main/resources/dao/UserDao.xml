<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.UserDao">

    <!-- 单种参数注入  -->
    <select id="getInfo" parameterType="String" resultType="com.example.demo.bean.UserBean">
        select * from user where mobile= #{mobile};
    </select>

    <select id="getAllInfo" parameterType="String" resultType="com.example.demo.bean.UserBean">
        select * from user where name= #{name};
    </select>

    <!-- 多种不同类型参数注入，也可以使用map list则需要声明parameter类型 在接受参数的时候赋值  -->

    <select id="show"  resultType="com.example.demo.bean.UserBean">
        select * from user where name= #{name} and id= #{id};
    </select>


    <select id="login" parameterType="String" resultType="com.example.demo.bean.UserData">
        select * from user_data where user_id=(select id from user where mobile= #{mobile} and password= #{password});
    </select>

    <insert id="regis" parameterType="String" >
        insert into user (mobile,password,name,region)values(#{mobile},#{password},#{name},#{region})
    </insert>

    <update id="updatePassword" parameterType="String">
        update user set password=#{password} where mobile=#{mobile}
    </update>

    <delete id="delete" parameterType="String">
        delete from user where mobile=#{mobile};
    </delete>
</mapper>